{
  "workbench.colorTheme": "Default Dark+",
  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/.next": true,
    "**/node_modules": true,
    "**/.git": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  
  // ðŸŽ¨ Happy & Animated Cursor Settings
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 2,
  
  // ðŸŒˆ Colorful & Fun Editor Features
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.indentation": true,
  "editor.matchBrackets": "always",
  "editor.renderWhitespace": "boundary",
  
  // âœ¨ Smooth Animations & Transitions
  "workbench.reduceMotion": "off",
  "editor.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  
  // ðŸŽ¯ Enhanced Visual Feedback
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": false,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 100,
  
  // ðŸŽª Fun Workbench Features
  "workbench.iconTheme": "vs-seti",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.startupEditor": "welcomePage",
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": "multiple",
  
  // ðŸŒŸ Terminal & Console Happiness
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  
  // ðŸŽ¨ Syntax Highlighting Enhancements
  "editor.semanticHighlighting.enabled": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic",
          "foreground": "#6A9955"
        }
      }
    ]
  },
  "editor.codeLens": true,
  "editor.parameterHints.enabled": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  
  // ðŸŽ¨ File Explorer Enhancements
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  "explorer.sortOrder": "type",
  
  // ðŸŒˆ Git Integration Happiness
  "git.decorations.enabled": true,
  "git.enableSmartCommit": true,
  "scm.diffDecorations": "all",
  
  // ðŸŽ¯ IntelliSense & Auto-complete Magic
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.tabCompletion": "on",
  
  // ðŸŽª Extensions & Features
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "accessibility.signals.lineHasError": {
    "sound": "on"
  },
  "accessibility.signals.lineHasWarning": {
    "sound": "on"
  },
  "accessibility.signals.onDebugBreak": {
    "sound": "on"
  },
  "editor.guides.highlightActiveIndentation": true
}
